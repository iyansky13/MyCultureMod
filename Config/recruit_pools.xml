    <Culture id="empire">
        <Troop id="aserai_recruit" weight="70" />
        <Troop id="sturgian_recruit" weight="30" />
    </Culture>
    
    <Culture id="sturgia">
        <Troop id="sturgian_recruit" weight="70" />
        <Troop id="aserai_recruit" weight="30" />
    </Culture>
    
    <Culture id="aserai">
        <Troop id="aserai_recruit" weight="70" />
        <Troop id="vlandian_recruit" weight="30" />
    </Culture>
    
    <Culture id="vlandia">
        <Troop id="vlandian_recruit" weight="70" />
